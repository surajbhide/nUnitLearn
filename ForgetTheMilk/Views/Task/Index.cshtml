@model List<ForgetTheMilk.Controllers.Task>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <p>Add a Task:</p>
    <form action="@Url.Action("Add")" method="post">
        <input type="text" name="task" value="" class="input-lg col-xs-12" autofocus/>
    </form>
</div>

<h3>@Model.Count() Task(s)</h3>
<table class="table table-striped">
    <tr>
        <th>Description</th>
        <th>Due Date</th>
        <th>Link</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Description</td>
            <td>@(item.DueDate.HasValue ? @item.DueDate.Value.ToShortDateString() : "")</td>
            <td><a href="@item.Link">@item.Link</a></td>
        </tr>
    }
</table>